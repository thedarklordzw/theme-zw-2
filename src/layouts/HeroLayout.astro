---
const { heading, subtext } = Astro.props;
---

<section id='hero' class='relative mb-24'>
  <div class='block w-screen'>
    <img
      src='../images/hero-small.webp'
      alt='Hero Image'
      class='rounded-none w-full h-auto object-cover'
    />
    &nbsp;
  </div>
  <div class='absolute top-1/4 left-[10%] text-white inline-block w-1/2'>
    <h1
      class='text-6xl font-extrabold mb-2 xxl:text-6xl xl:text-5xl inline-block'
    >
      {heading}
    </h1>
    <p class='text-2xl mb-8 w-full xl:text-xl inline-block'>
      {subtext}
    </p>
  </div>
</section>
